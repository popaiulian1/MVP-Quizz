{
    "compilerOptions": {
        "target": "es2020",
        "module": "es6",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/renderer/**/*",
        "src/types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}