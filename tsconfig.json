{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "include": [
        "src/main/**/*",
        "src/types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/renderer/**/*"
    ]
}